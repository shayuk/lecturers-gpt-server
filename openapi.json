{
  "openapi": "3.1.0",
  "info": { "title": "Lecturers GPT Gateway", "version": "1.0.0" },
  "servers": [{ "url": "https://lecturers-gpt-server.onrender.com" }],
  "paths": {
    "/api/ask": {
      "post": {
        "operationId": "askAPI",
        "summary": "Ask the university GPT with email gating and logging",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Requester email for authorization"
                  },
                  "prompt": {
                    "type": "string",
                    "description": "User question (auto-filled from last user message)"
                  },
                  "meta": {
                    "type": "object",
                    "additionalProperties": true,
                    "description": "Optional metadata (won't affect answer)"
                  }
                },
                "required": ["email", "prompt"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Model answer and token usage",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "answer": { "type": "string" },
                    "usage": { "type": "object" },
                    "model": { "type": "string" }
                  },
                  "required": ["answer"]
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Email not authorized" }
        }
      }
    }
  }
}
